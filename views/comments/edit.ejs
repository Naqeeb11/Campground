<% include ../partials/header%>
<div class="container">
    <div class="row">
        <h1 class="col-12 d-flex justify-content-center m-3">Edit Comment </h1>
        <div class="col-12 d-flex justify-content-center m-2">
            <form action="/campgrounds/<%=campground%>/comments/<%=comment._id%>?_method=PUT" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="comment[text]" value="<%= comment.text %>">
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-success btn-block">Submit!</button>
                </div>
            </form>
        </div>
        <a class="col-12 d-flex justify-content-center" href="/campgrounds">Go Back!</a>

    </div>
</div>

<% include ../partials/footer%>