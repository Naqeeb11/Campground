<% include ../partials/header %>



<div class="container mt-3">
    <header class="jumbotron">
        <div class="container">
            <h1>Welcome to YelpCamp!</h1>
            <p>View our hand-picked campgrounds from all over the world</p>
            <p>
                <a class="btn btn-primary btn-large" href="/campgrounds/new">Add New Campgrounds</a>
            </p>
        </div>
    </header>

    <div class="row">
        <% campgrounds.forEach(function(campground){%>
        <div class="col-md-3 col-sm-6 mb-2">
            <div class="img-thumbnail">
                <img  class="img-thumbnail border-0" src="<%=campground.image%>">
                <div class="caption mt-2">
                    <%=campground.name%>
                
                <p>
                    <a href="/campgrounds/<%= campground._id %>" class="btn btn-primary mt-2">More Info</a>
                </p>
            </div>
            </div>
        </div>
        <%});%>
    </div>
</div>
<% include ../partials/footer %>